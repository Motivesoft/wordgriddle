meta {
  name: upload-txt
  type: http
  seq: 2
}

post {
  url: http://{{HOST}}/api/bonus/upload
  body: multipartForm
  auth: none
}

body:multipart-form {
  file: @file(data/bonus.txt) @contentType(plain/text)
}

assert {
  res.status: eq 200
  res.headers['content-type']: contains application/json
}

tests {
  test("Should return the status", function() {
    const data = res.getBody();
    expect(data).to.have.property('status');
    expect(data.status).to.equal('complete');
  });
  
  test("Should return the uploaded words count", function() {
    const data = res.getBody();
    expect(data).to.have.property('uploadedCount');
    expect(data.uploadedCount).to.be.a('number');
  });
  
  test("Should return the imported words count", function() {
    const data = res.getBody();
    expect(data).to.have.property('importedCount');
    expect(data.importedCount).to.be.a('number');
  });
  
  test("Imported count should match upload count", function() {
    const data = res.getBody();
    expect(data.importedCount === data.uploadedCount);
  });
  
}
