meta {
  name: upload empty
  type: http
  seq: 8
}

post {
  url: http://{{HOST}}/api/bonus/upload
  body: multipartForm
  auth: none
}

body:multipart-form {
  file: @file(data/empty.txt) @contentType(plain/text)
}

assert {
  res.status: eq 400
}

tests {
  test("Should return the status", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
  });
}
